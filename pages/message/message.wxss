/* pages/message/message.wxss */
.message_item {
  display: flex;
  align-items: center;
  min-height: 150rpx;
  border-bottom: 1px solid #ededed;
  padding: 0 20rpx;  
}
.message_item:last-of-type {
  border-bottom: none;
}
.status_img .read {
  width: 48rpx;
  margin-bottom: 8rpx;
  height: 48rpx;
}
.status_img .unread {
  width: 48rpx;
  height: 34rpx;
  margin-bottom: 8rpx;
}
.status_img {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 22rpx;
  color: #b0b0b0;
  width: 48rpx;
}
.status_img view{
  line-height: 28rpx;
  width: 100%;
}
.message_info {
  width: 660rpx;
  padding-left:22rpx; 
}
.item_title {
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item_title view:first-child{
  color: #3A444A;
  font-size: 30rpx;
  line-height: 40rpx;
}
.item_title view:last-child {
  font-size: 24rpx;
  color: #B0B0B0;
}
.item_info {
  width: 100%;
  font-size: 28rpx;
  color: #858585;
  min-height: 33rpx;
  line-height: 33rpx;
  margin-top: 10rpx;
  text-align: justify;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
}
.tobottom {
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  color: #999;
  font-size: 32rpx;
  border-top: 1px solid #ededed;
}
.null {
  height: 370rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}
.null image {
  width: 216rpx;
  height: 101rpx;
}
.null view {
  height: 40rpx;
  line-height: 40rpx;
  color: #b0b0b0;
  font-size: 28rpx;
  margin-top: 100rpx;
}