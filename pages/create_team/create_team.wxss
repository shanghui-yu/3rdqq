/* pages/create_team/create_team.wxss */
@import '../../template/index.wxss';
.area-Picker {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

.mark {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .77);
  z-index: -1;
}
.picker-footer {
  position: absolute;
  bottom: 10px;
  left: 10px;
  right: 10px;
  height: 40px;
  background: #fff;
  text-align: center;
  line-height: 40px;
  border-radius: 8px;
  border: 1px solid #D5D5D6;
}

.picke-header {
  position: absolute;
  bottom: 270px;
  left: 10px;
  right: 10px;
  height: 100rpx;
  background: #fff;
  line-height: 100rpx;
  padding: 0 16px;
  display: flex;
  z-index: 100;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  align-items: center;
  justify-content: center;
}

.picke-header::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  border-bottom: 1px solid #D5D5D6;
  color: #D5D5D6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.form_line {
  display: flex;
  padding: 40rpx 0;
  width: 710rpx;
  margin: 0 auto;
  font-size: 26rpx;
  height: 40rpx;
  border-bottom: 1px solid #efefef;
  justify-content: space-between;
}
image {
  width: 40rpx;
  height: 40rpx;
}
.form_line view:first-child {
  display: flex;
  color: #666;
}
.form_line>view:first-child image {
  margin-right: 21rpx;
}
.form_line view:first-child text {
  height: 40rpx;
  line-height: 40rpx;
}
.form_line view:last-child input {
  height: 40rpx;
  width: 400rpx;
  text-align: right;
  color: #666
}
.clogo{
  display: flex;
  width: 200rpx;
  height: 66px;
  border-radius: 50%;
  justify-content: flex-end;
}
.clogo view:first-child image {
  width: 66rpx;
  height: 66rpx;
  margin-top: -8px;
}
.btn_create {
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #fff;
  background: #2a71f0;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}
.btn_create view {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1px solid #2095fc;
  text-align: center;
  line-height: 24rpx;
  color: #2095fc;
  margin-right: 15rpx;
}
picker view {
  display: flex;
  align-items: center;
}
picker view text {
  margin-right: 6rpx;
}
