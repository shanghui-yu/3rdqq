.container {
  width: 100%;
  height: 100%;
}
/* 右侧悬浮菜单按钮 */
.suspension_btn{
  position: fixed;
  right: 10rpx;
  width: 130rpx;
  height: 130rpx;
  bottom: 75rpx;
  z-index: 115;
}
.suspension_btn image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}
.suspension{
  z-index: 115;
  position: fixed;
  right: 35rpx;
  bottom: 116rpx;
  background-image: linear-gradient(-226deg, #3853FF 0%, #187ADF 42%, #00EAF8 100%);
  box-shadow: 0 8px 25px 0 rgba(43,112,240,0.40);
  width:80rpx;
  height: 375rpx;
  font-size: 24rpx;
  line-height: 33rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 35rpx;
  border-bottom-right-radius: 35rpx;
}
.suspension .item{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.suspension .item image{
  display: block;
  margin-top: 24rpx;
}
.suspension .item_match image{
  width: 40rpx;
  height: 40rpx;
  
}
.suspension .item_btn image{
  width: 32rpx;
  height: 40rpx;
  margin-top: 22rpx;
}
.suspension .item_me image{
  width: 35rpx;
  height: 38rpx;
  margin-top: 28rpx;
}
.suspension .close image{
  width: 128rpx;
  height: 128rpx;
  margin: 13rpx 0 0 -25rpx;
  display: block;
}
/* 提醒授权 */
.get-user{
  position: fixed;
  left: 0;
  top:0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 1000;
}
.get-user .weui_dialog{
  position: absolute;
  width: 85%;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FAFAFC;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}
.get-user .weui_title{
  padding: 40rpx 40rpx 16rpx;
}
.get-user .weui_dialog_bd{
  padding: 0 20px;
  font-size: 15px;
  color: #888;
  word-wrap: break-word;
  word-break: break-all;
  text-align: left;
}
.get-user .weui_footer{
  position: relative;
  line-height: 42px;
  margin-top: 20px;
  font-size: 17px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.get-user .weui_footer:after{
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  border-top: 1px solid #D5D5D6;
  color: #D5D5D6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.get-user .weui_footer  button{
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #3CC51F;
  text-decoration: none;
  border:none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
.get-user .weui_footer  button::before{
  border: none;
}